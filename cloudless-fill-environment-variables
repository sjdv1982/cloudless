#!/bin/bash

echo 'Cloudless deployed in:' $CLOUDLESS_DEPLOYMENT_DIR

mkdir -p $CLOUDLESS_DEPLOYMENT_DIR/buffers $CLOUDLESS_DEPLOYMENT_DIR/graphs $CLOUDLESS_DEPLOYMENT_DIR/instances $CLOUDLESS_DEPLOYMENT_DIR/database

set +u
if [ -z "$CLOUDLESS_IP" ]; then
  export CLOUDLESS_IP=0.0.0.0
fi
set -u

export COMPOSE_PROJECT_NAME=cloudless
export HASHSERVER_LAYOUT=prefix

export SEAMLESS_HASHSERVER_DIRECTORY=$CLOUDLESS_DEPLOYMENT_DIR/buffers
export SEAMLESS_DATABASE_DIRECTORY=$CLOUDLESS_DEPLOYMENT_DIR/database
export SEAMLESS_HASHSERVER_PORT=5578
export SEAMLESS_DATABASE_PORT=5523
export SEAMLESS_ASSISTANT_PORT=5534
